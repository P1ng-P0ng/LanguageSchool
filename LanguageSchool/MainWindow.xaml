<Window x:Class="LanguageSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchool"
        mc:Ignorable="d"
        Title="ShafikovLanguageSchool" Height="450" Width="800" Icon="Images\school_logo.ico">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#FFE7FABF"/>
            <Border Grid.Row="2" Background="#FFE7FABF"/>
            <Image Source="Images\school_logo.png" Grid.Row="0" HorizontalAlignment="Left" Margin="5"/>
            <TextBlock Text="Языковая школа" FontSize="40" Grid.Row="0" HorizontalAlignment="Center"/>
            <Button Name="BackBtn" Grid.Row="0" Content="Назад" Visibility="Hidden"/>
            <Frame Grid.Row="1" Name="MainFrame">

            </Frame>
        </Grid>
    </Grid>
</Window>
